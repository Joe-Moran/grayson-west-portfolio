---
import { Picture } from 'astro:assets';
interface Props {
  image: typeof Picture.prototype;
  alt: string;
}

const { image, alt } = Astro.props;
---

<div class='image-container'>
  <Picture src={image} alt={alt} formats={['webp', 'jpeg']} />
</div>

<style>
  .image-container {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;

    picture,
    picture img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      object-position: center;
    }
  }
</style>
