<div class='post-page'>
  <div class='content-container'>
    <slot name='content' />
  </div>
  <div class='images-container'>
    <slot />
  </div>

  <style>
    .post-page {
      display: flex;
      flex-wrap: wrap;
      gap: 12px;
    }

    .images-container {
      position: relative;
      flex: 1;
      align-items: center;
      justify-content: center;

      &:has(.icon) {
        display: flex;
      }
    }

    .content-container {
      padding: 16px;
      color: var(--color-post-text);
      background: var(--color-post-background);

      > *:not(h2, h3, h4, h5, h6) {
        max-width: 70ch;
        font-family: 'Source Serif 4', serif;
        font-size: 1rem;
        line-height: 1.2;
      }

      h2 {
        font-size: 1.5625rem;
        font-weight: 600;
        line-height: 1;
      }

      li {
        margin-bottom: 1rem;
        line-height: 1.2;
      }
    }
  </style>
</div>
