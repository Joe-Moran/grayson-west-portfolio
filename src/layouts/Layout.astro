---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import type { WebPage } from '../types/Page.mts';
interface Props {
  title: string;
  subPages?: WebPage[];
}

const siteTitle = 'Grayson Gail West';
const { title } = Astro.props;
const titleFormatted = title === siteTitle ? siteTitle : `${title} | ${siteTitle}`;
import '../styles/index.css';

const mainLandmarkId = 'main-content';
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='Astro description' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{titleFormatted}</title>
  </head>

  <body>
    <Header mainLandmarkId={mainLandmarkId} />
    <main id={mainLandmarkId}>
      <slot />
    </main>
    <Footer />
  </body>

  <style>
    html {
      background: #13151a;
      background-size: 224px;
    }

    header {
      position: sticky;
      min-height: 100px;
    }

    body {
      margin: 0;
      background: var(--color-background);
    }

    main {
      display: flex;
      flex-direction: column;
      gap: 42px;
      color: var(--white);
    }
  </style>
</html>
